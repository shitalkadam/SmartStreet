<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:background="@drawable/background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:text="Turn lights On/Off"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_marginRight="100dp"/>

        <Switch
            android:id="@+id/mySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <TextView
        android:text="Change Intensity of LED"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp" />

    <SeekBar
        android:id="@+id/intensity_seek"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:background="#E1F5FE" />


    <TextView
        android:text="Change color of LED"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="130dp"/>

    <SeekBar
        android:id="@+id/red_seek"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:background="#D32F2F"
      />

    <SeekBar
        android:id="@+id/green_seek"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:background="#388E3C"
        />
    <!--to add to the git-->

    <SeekBar
        android:id="@+id/blue_seek"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:background="#1976D2"
       />

    <LinearLayout
        android:id="@+id/rgb_value_holder"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="190dp">
        <TextView
            android:id="@+id/red_value"
            android:text="255"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="20dp"

            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/green_value"
            android:text="255"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"/>
        <TextView
            android:id="@+id/blue_value"

            android:text="255"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </LinearLayout>


</LinearLayout>