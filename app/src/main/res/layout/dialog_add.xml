<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:hint="Add comment with rating" />


    <TextView
        android:id="@+id/add_dialog_usename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:hint="Hi" />

    <EditText
        android:id="@+id/add_dialog_review"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/comment_text"
        android:textStyle="italic"
        android:gravity="top"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:inputType="textMultiLine"
        android:hint="Enter a review..." />

    <RatingBar
        android:id="@+id/add_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_gravity="center"
        android:progressTint="#03a9f4"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:rating="1.0" />

    <!--to add to the git-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/add_dialog_cancel"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_shape"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/add_dialog_ok"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/button_shape"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:text="@android:string/ok" />
    </LinearLayout>

</LinearLayout>