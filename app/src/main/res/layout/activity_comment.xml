<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"

    android:orientation="vertical"
    tools:context="com.example.android.smartstreet.Comment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Welcome"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="!"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
    <EditText
        android:layout_height="60dp"
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:ems="5"
        android:inputType="textMultiLine"
        android:background="@drawable/comment_text"
        android:textColor="#000000"
        android:typeface="normal"
        android:cursorVisible="false"
        android:hint="Comment...." ></EditText>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:id="@+id/ratingBar"
        android:numStars="5"
        android:rating="1"
        android:progressTint="#448AFF"
        android:layout_centerHorizontal="true" ></RatingBar>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:layout_marginBottom="20dp"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:onClick="newComment"
        android:background="@drawable/alert_button"
        android:layout_centerHorizontal="true" ></Button>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#000000"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/list_view"
        android:textAlignment="center"
        android:background="@drawable/comment_text"
        android:layout_marginBottom="20dp"></ListView>


</LinearLayout>
