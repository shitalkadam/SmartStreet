<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.android.smartstreet.Registration">


    <ImageView
        android:id="@+id/picture"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/registration11" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="First name..."
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textStyle="italic" />
    <EditText
        android:id="@+id/lastName"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Last name..."
        android:inputType="textPersonName"
        android:textColorHint="#000000"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Email address..."
        android:inputType="textEmailAddress"
        android:textColorHint="#000000"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Password..."
        android:inputType="textPassword"
        android:textColorHint="#000000"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Contact Number..."
        android:layout_marginBottom="10dp"
        android:inputType="phone"
        android:textColorHint="#000000"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/submit_bt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_shape"
            android:onClick="submit"
            android:text="Submit"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancel_bt"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape"
            android:onClick="home"
            android:text="Cancel"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"

        android:text="Register Using Barcode"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/scan_button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/scan3"
        android:onClick="barcodeRegister"></ImageButton>


</LinearLayout>


